<!-- Filter Script -->
<script>
  const filterButtons = document.querySelectorAll('.category-filter');
  const galleryItems = document.querySelectorAll('.gallery-item');
  const photoCount = document.getElementById('photo-count');
  const emptyState = document.getElementById('empty-state');
  const galleryGrid = document.getElementById('gallery-grid');
  const resetButton = document.getElementById('reset-filter');

  function filterGallery(category: string) {
    let visibleCount = 0;
    
    galleryItems.forEach((item) => {
      const itemCategory = (item as HTMLElement).dataset.category;
      const shouldShow = category === 'all' || itemCategory === category;
      
      if (shouldShow) {
        (item as HTMLElement).style.display = 'block';
        visibleCount++;
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });
    
    // Update count
    if (photoCount) {
      photoCount.textContent = visibleCount.toString();
    }
    
    // Show/hide empty state
    if (emptyState && galleryGrid) {
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
        galleryGrid.classList.add('hidden');
      } else {
        emptyState.classList.add('hidden');
        galleryGrid.classList.remove('hidden');
      }
    }
    
    // Update active button
    filterButtons.forEach((btn) => {
      const btnCategory = (btn as HTMLElement).dataset.category;
      (btn as HTMLElement).dataset.active = (btnCategory === category).toString();
    });
  }

  // Add click handlers
  filterButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const category = (btn as HTMLElement).dataset.category || 'all';
      filterGallery(category);
    });
  });

  // Reset button
  if (resetButton) {
    resetButton.addEventListener('click', () => {
      filterGallery('all');
    });
  }
</script>