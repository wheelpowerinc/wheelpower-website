---
import MainLayout from '../../layouts/MainLayout.astro';
import { getGallery, getImageUrl } from '../../lib/directus.js';

// Fetch gallery from Directus
const directusGallery = await getGallery();

// Gallery categories
const categories = ['All', 'Shop', 'Services', 'Tires', 'Mags', 'Customers'];

// Fallback data in case Directus is unavailable or empty
const fallbackGallery = [
  { id: 1, category: 'shop', title: 'WheelPower Shop Front', description: 'Our shop along Marilaque Highway', image: null },
  { id: 2, category: 'services', title: 'Wheel Alignment', description: 'Precision alignment service', image: null },
  { id: 3, category: 'tires', title: 'Tire Display', description: 'Wide selection of brands', image: null },
];

// Use Directus data if available, otherwise use fallback
const galleryItems = directusGallery && directusGallery.length > 0 ? directusGallery : fallbackGallery;

// Placeholder icons for different categories
const categoryIcons = {
  shop: 'üè™',
  services: 'üîß',
  tires: 'üîò',
  mags: 'üé°',
  customers: 'üöó',
};
---

<MainLayout 
  title="Gallery" 
  description="See our work at WheelPower Auto Shop. Photos of our shop, services, tire installations, and happy customers in Baras, Rizal."
>

  <!-- Page Header -->
  <section class="bg-gradient-to-b from-dark-900 to-dark-950 py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="section-subtitle">See Our Work</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Gallery</h1>
      <p class="text-dark-300 text-lg max-w-2xl mx-auto">
        Take a look at our shop, our work, and our happy customers.
      </p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-8 border-b border-dark-800 sticky top-16 md:top-20 bg-dark-950/95 backdrop-blur-md z-30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-2 justify-center">
        {categories.map((category) => (
          <button 
            class="category-filter px-4 py-2 rounded-full text-sm font-medium border transition-all data-[active=true]:bg-primary-500 data-[active=true]:border-primary-500 data-[active=true]:text-white border-dark-600 text-dark-300 hover:border-primary-500/50 hover:text-white"
            data-category={category.toLowerCase()}
            data-active={category === 'All' ? 'true' : 'false'}
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Results count -->
      <div class="mb-8">
        <p class="text-dark-400">
          Showing <span id="photo-count" class="text-white font-medium">{galleryItems.length}</span> photos
        </p>
      </div>
      
      <!-- Gallery Grid -->
      <div id="gallery-grid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {galleryItems.map((item) => {
          const categoryValue = typeof item.category === 'string' ? item.category.toLowerCase() : 'shop';
          const iconKey = categoryValue as keyof typeof categoryIcons;
          
          return (
            <div 
              class="gallery-item group cursor-pointer"
              data-category={categoryValue}
            >
              <div class="card overflow-hidden">
                <!-- Image -->
                <div class="aspect-[4/3] bg-gradient-to-br from-dark-800 to-dark-900 relative overflow-hidden">
                  {item.image ? (
                    <img 
                      src={getImageUrl(item.image)} 
                      alt={item.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  ) : (
                    <div class="absolute inset-0 flex items-center justify-center">
                      <div class="text-center">
                        <div class="text-5xl mb-2">{categoryIcons[iconKey] || 'üì∑'}</div>
                        <p class="text-dark-500 text-sm">(Photo placeholder)</p>
                      </div>
                    </div>
                  )}
                  
                  <!-- Overlay on hover -->
                  <div class="absolute inset-0 bg-primary-500/0 group-hover:bg-primary-500/20 transition-colors flex items-center justify-center">
                    <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                      <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                        </svg>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Category Badge -->
                  <div class="absolute top-3 left-3">
                    <span class="px-2 py-1 bg-dark-900/80 backdrop-blur-sm rounded-full text-xs font-medium text-dark-200 capitalize">
                      {categoryValue}
                    </span>
                  </div>
                </div>
                
                <!-- Info -->
                <div class="p-4">
                  <h3 class="font-bold text-white group-hover:text-primary-400 transition-colors mb-1">
                    {item.title}
                  </h3>
                  {item.description && (
                    <p class="text-dark-400 text-sm">{item.description}</p>
                  )}
                </div>
              </div>
            </div>
          );
        })}
      </div>
      
      <!-- Empty State -->
      {galleryItems.length === 0 && (
        <div class="text-center py-16">
          <div class="text-6xl mb-4">üì∑</div>
          <h3 class="text-xl font-bold text-white mb-2">No photos yet</h3>
          <p class="text-dark-400 mb-4">Check back soon for new photos!</p>
        </div>
      )}
      
      <!-- Hidden Empty State for filtering -->
      <div id="empty-state" class="hidden text-center py-16">
        <div class="text-6xl mb-4">üì∑</div>
        <h3 class="text-xl font-bold text-white mb-2">No photos found</h3>
        <p class="text-dark-400 mb-4">Try selecting a different category.</p>
        <button id="reset-filter" class="btn-secondary">
          Show All Photos
        </button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-dark-900/50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Want to See Your Car Here?
      </h2>
      <p class="text-dark-300 mb-8">
        Book an appointment and let us give your vehicle the care it deserves. 
        We love featuring our happy customers!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/book" class="btn-primary">
          üìÖ Book Appointment
        </a>
        <a href="https://www.facebook.com/WheelPowerTiresAutocare" target="_blank" rel="noopener noreferrer" class="btn-secondary">
          Follow Us on Facebook
        </a>
      </div>
    </div>
  </section>

</MainLayout>

<!-- Filter Script -->
<script>
  const filterButtons = document.querySelectorAll('.category-filter');
  const galleryItems = document.querySelectorAll('.gallery-item');
  const photoCount = document.getElementById('photo-count');
  const emptyState = document.getElementById('empty-state');
  const galleryGrid = document.getElementById('gallery-grid');
  const resetButton = document.getElementById('reset-filter');

  function filterGallery(category) {
    let visibleCount = 0;
    
    galleryItems.forEach((item) => {
      const itemCategory = item.dataset.category;
      const shouldShow = category === 'all' || itemCategory === category;
      
      if (shouldShow) {
        item.style.display = 'block';
        visibleCount++;
      } else {
        item.style.display = 'none';
      }
    });
    
    if (photoCount) {
      photoCount.textContent = visibleCount.toString();
    }
    
    if (emptyState && galleryGrid) {
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
        galleryGrid.classList.add('hidden');
      } else {
        emptyState.classList.add('hidden');
        galleryGrid.classList.remove('hidden');
      }
    }
    
    filterButtons.forEach((btn) => {
      const btnCategory = btn.dataset.category;
      btn.dataset.active = (btnCategory === category).toString();
    });
  }

  filterButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const category = btn.dataset.category || 'all';
      filterGallery(category);
    });
  });

  if (resetButton) {
    resetButton.addEventListener('click', () => {
      filterGallery('all');
    });
  }
</script>