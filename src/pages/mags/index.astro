---
import MainLayout from '../../layouts/MainLayout.astro';
import { getMags, getImageUrl, formatPrice, getSiteSettings } from '../../lib/directus.js';

// Fetch mags from Directus
const directusMags = await getMags();

// Fetch site settings for phone number
const siteSettings = await getSiteSettings();
const phoneNumber = siteSettings?.phone || '+639XXXXXXXXX';

// Size filter options
const sizes = ['All', '14"', '15"', '16"', '17"', '18"'];

// Fallback data in case Directus is unavailable - removed, showing empty state instead

// Use Directus data if available, otherwise show empty
const mags = directusMags || [];

// Helper function for status badge
function getStatusBadge(status, quantity) {
  if (status === 'out_of_stock' || quantity === 0) {
    return { text: 'Out of Stock', class: 'bg-red-500/20 text-red-400 border-red-500/30' };
  }
  if (status === 'limited' || (quantity && quantity <= 3)) {
    return { text: `Only ${quantity} left`, class: 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30' };
  }
  return { text: 'In Stock', class: 'bg-green-500/20 text-green-400 border-green-500/30' };
}
---

<MainLayout 
  title="Mags / Wheels" 
  description="Browse quality mag wheels and rims at WheelPower Auto Shop. Wide selection of sizes and styles for all vehicles. Baras, Rizal."
>

  <!-- Page Header -->
  <section class="bg-gradient-to-b from-dark-900 to-dark-950 py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="section-subtitle">Our Products</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Mags / Wheels</h1>
      <p class="text-dark-300 text-lg max-w-2xl mx-auto">
        Upgrade your ride with quality mag wheels. From budget-friendly to premium Japanese brands.
      </p>
    </div>
  </section>

  <!-- Size Filter -->
  <section class="py-8 border-b border-dark-800 sticky top-16 md:top-20 bg-dark-950/95 backdrop-blur-md z-30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-2 justify-center">
        {sizes.map((size) => (
          <button 
            class="size-filter px-4 py-2 rounded-full text-sm font-medium border transition-all data-[active=true]:bg-primary-500 data-[active=true]:border-primary-500 data-[active=true]:text-white border-dark-600 text-dark-300 hover:border-primary-500/50 hover:text-white"
            data-size={size.toLowerCase().replace('"', '')}
            data-active={size === 'All' ? 'true' : 'false'}
          >
            {size}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Mags Grid -->
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Results count -->
      <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <p class="text-dark-400">
          Showing <span id="mag-count" class="text-white font-medium">{mags.length}</span> wheels
        </p>
        <p class="text-dark-500 text-sm">
          üí° Prices are per piece. Sold in sets of 4.
        </p>
      </div>
      
      <!-- Mags Grid -->
      <div id="mags-grid" class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {mags.map((mag) => {
          const statusBadge = getStatusBadge(mag.status, mag.quantity);
          const isOutOfStock = mag.status === 'out_of_stock' || mag.quantity === 0;
          const sizeValue = typeof mag.size === 'string' ? mag.size.replace('"', '') : mag.size;
          
          return (
            <div 
              class={`mag-card card overflow-hidden group ${isOutOfStock ? 'opacity-60' : ''}`}
              data-size={sizeValue}
            >
              <!-- Image -->
              <div 
                class="aspect-square bg-gradient-to-br from-dark-800 to-dark-900 relative overflow-hidden flex items-center justify-center cursor-pointer mag-image-trigger"
                data-image={mag.image ? getImageUrl(mag.image) : ''}
                data-name={mag.name}
                data-brand={mag.brand}
                data-size={mag.size}
                data-bolt={mag.bolt_pattern || ''}
                data-width={mag.width || ''}
                data-offset={mag.offset || ''}
                data-color={mag.color || ''}
                data-price={formatPrice(mag.price)}
              >
                {mag.image ? (
                  <img 
                    src={getImageUrl(mag.image)} 
                    alt={mag.name}
                    class="w-full h-full object-contain p-2 hover:scale-105 transition-transform"
                  />
                ) : (
                  <div class="text-center">
                    <div class="text-6xl mb-2">üé°</div>
                    <p class="text-dark-500 text-xs">{mag.brand}</p>
                  </div>
                )}
                
                <!-- Status Badge -->
                <div class="absolute top-3 left-3">
                  <span class={`px-2 py-1 rounded-full text-xs font-medium border ${statusBadge.class}`}>
                    {statusBadge.text}
                  </span>
                </div>
                
                <!-- Sale Badge -->
                {mag.original_price && (
                  <div class="absolute top-3 right-3">
                    <span class="px-2 py-1 bg-primary-500 text-white rounded-full text-xs font-bold">
                      SALE
                    </span>
                  </div>
                )}
              </div>
              
              <!-- Info -->
              <div class="p-4">
                <!-- Brand -->
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-primary-400 text-sm font-medium">{mag.brand}</span>
                  {mag.color && (
                    <>
                      <span class="text-dark-600">‚Ä¢</span>
                      <span class="text-dark-400 text-sm">{mag.color}</span>
                    </>
                  )}
                </div>
                
                <!-- Name -->
                <h3 class="font-bold text-white group-hover:text-primary-400 transition-colors mb-2">
                  {mag.name}
                </h3>
                
                <!-- Specs -->
                <div class="grid grid-cols-2 gap-x-4 gap-y-1 mb-3 text-sm">
                  <div>
                    <span class="text-dark-500">Size:</span>
                    <span class="text-dark-300 ml-1">{mag.size}"</span>
                  </div>
                  {mag.width && (
                    <div>
                      <span class="text-dark-500">Width:</span>
                      <span class="text-dark-300 ml-1">{mag.width}</span>
                    </div>
                  )}
                  {mag.bolt_pattern && (
                    <div>
                      <span class="text-dark-500">PCD:</span>
                      <span class="text-dark-300 ml-1">{mag.bolt_pattern}</span>
                    </div>
                  )}
                  {mag.offset && (
                    <div>
                      <span class="text-dark-500">Offset:</span>
                      <span class="text-dark-300 ml-1">{mag.offset}</span>
                    </div>
                  )}
                </div>
                
                <!-- Price -->
                <div class="flex items-center gap-2 mb-4">
                  <span class="text-xl font-bold text-white">{formatPrice(mag.price)}</span>
                  {mag.original_price && (
                    <span class="text-dark-500 line-through text-sm">{formatPrice(mag.original_price)}</span>
                  )}
                  <span class="text-dark-500 text-xs">/pc</span>
                </div>
                
                <!-- Action Button -->
                {isOutOfStock ? (
                  <button disabled class="w-full py-2.5 rounded-lg bg-dark-800 text-dark-500 font-medium cursor-not-allowed">
                    Out of Stock
                  </button>
                ) : (
                  <a
                    href={`/book?service=other&notes=${encodeURIComponent(`Inquiry for: ${mag.name}\nBrand: ${mag.brand}\nSize: ${mag.size}"\nPrice: ${formatPrice(mag.price)} /pc`)}`}
                    class="block w-full py-2.5 rounded-lg bg-primary-500 hover:bg-primary-600 text-white font-medium text-center transition-colors"
                  >
                    Inquire / Buy
                  </a>
                )}
              </div>
            </div>
          );
        })}
      </div>
      
      <!-- More Designs CTA - Always visible -->
      <div id="more-designs-cta" class="text-center py-12 mt-8 border-t border-dark-800">
        <div class="text-5xl mb-4">üé°</div>
        <h3 class="text-xl font-bold text-white mb-2">More designs available at our shop!</h3>
        <p class="text-dark-400 mb-6">We have more sizes and styles in stock. Visit us or get in touch to see our full collection.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-secondary">
            Contact Us
          </a>
          <a href={`tel:${phoneNumber}`} class="btn-primary">
            üìû Call Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-16 bg-dark-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl mb-4">üìè</div>
          <h3 class="font-bold text-white mb-2">Fitment Check</h3>
          <p class="text-dark-400 text-sm">Not sure if it fits? Tell us your car model and we'll verify compatibility.</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üîß</div>
          <h3 class="font-bold text-white mb-2">Installation Included</h3>
          <p class="text-dark-400 text-sm">All wheel purchases include free mounting and balancing.</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üîò</div>
          <h3 class="font-bold text-white mb-2">Tire Packages</h3>
          <p class="text-dark-400 text-sm">Ask about our wheel + tire combo deals for extra savings!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Looking for a Specific Design?
      </h2>
      <p class="text-dark-300 mb-8">
        We can source wheels from various suppliers. Send us a photo or model name 
        and we'll get you a quote.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-secondary">
          Send Inquiry
        </a>
        <a href={`tel:${phoneNumber}`} class="btn-primary">
          üìû Call Us
        </a>
      </div>
    </div>
  </section>

</MainLayout>

<!-- Image Modal -->
<div id="image-modal" class="fixed inset-0 bg-black/90 z-50 hidden items-center justify-center p-4">
  <button id="modal-close" class="absolute top-4 right-4 text-white text-4xl hover:text-primary-400 transition-colors">&times;</button>
  <div class="max-w-3xl w-full">
    <img id="modal-image" src="" alt="" class="w-full max-h-[60vh] object-contain mb-4" />
    <div id="modal-details" class="bg-dark-900 rounded-lg p-4 text-center">
      <p class="text-primary-400 text-sm font-medium mb-1" id="modal-brand"></p>
      <h3 class="text-xl font-bold text-white mb-2" id="modal-name"></h3>
      <div id="modal-specs" class="flex flex-wrap justify-center gap-x-4 gap-y-1 text-dark-400 text-sm mb-2"></div>
      <p class="text-2xl font-bold text-white mb-4" id="modal-price"></p>
      <a id="modal-action-btn" href="/book" class="inline-block px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors">
        Inquire / Buy
      </a>
    </div>
  </div>
</div>

<!-- Filter Script -->
<script>
  const filterButtons = document.querySelectorAll('.size-filter');
  const magCards = document.querySelectorAll('.mag-card');
  const magCount = document.getElementById('mag-count');
  const emptyState = document.getElementById('empty-state');
  const magsGrid = document.getElementById('mags-grid');
  const resetButton = document.getElementById('reset-filter');

  function filterMags(size) {
    let visibleCount = 0;
    
    magCards.forEach((card) => {
      const cardSize = card.dataset.size;
      const shouldShow = size === 'all' || cardSize === size;
      
      if (shouldShow) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });
    
    if (magCount) {
      magCount.textContent = visibleCount.toString();
    }
    
    if (emptyState && magsGrid) {
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
        magsGrid.classList.add('hidden');
      } else {
        emptyState.classList.add('hidden');
        magsGrid.classList.remove('hidden');
      }
    }
    
    filterButtons.forEach((btn) => {
      const btnSize = btn.dataset.size;
      btn.dataset.active = (btnSize === size).toString();
    });
  }

  filterButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const size = btn.dataset.size || 'all';
      filterMags(size);
    });
  });

  if (resetButton) {
    resetButton.addEventListener('click', () => {
      filterMags('all');
    });
  }

  // Image Modal
  const modal = document.getElementById('image-modal');
  const modalImage = document.getElementById('modal-image');
  const modalName = document.getElementById('modal-name');
  const modalBrand = document.getElementById('modal-brand');
  const modalSpecs = document.getElementById('modal-specs');
  const modalPrice = document.getElementById('modal-price');
  const modalClose = document.getElementById('modal-close');
  const modalActionBtn = document.getElementById('modal-action-btn');
  const imageTriggers = document.querySelectorAll('.mag-image-trigger');

  imageTriggers.forEach((trigger) => {
    trigger.addEventListener('click', () => {
      const image = trigger.dataset.image;
      if (!image) return;

      const name = trigger.dataset.name;
      const brand = trigger.dataset.brand;
      const color = trigger.dataset.color;
      const size = trigger.dataset.size;
      const width = trigger.dataset.width;
      const bolt = trigger.dataset.bolt;
      const offset = trigger.dataset.offset;
      const price = trigger.dataset.price;

      modalImage.src = image;
      modalImage.alt = name;
      modalName.textContent = name;
      modalBrand.textContent = brand + (color ? ' ‚Ä¢ ' + color : '');

      // Build specs
      let specs = [];
      if (size) specs.push('Size: ' + size + '"');
      if (width) specs.push('Width: ' + width);
      if (bolt) specs.push('PCD: ' + bolt);
      if (offset) specs.push('Offset: ' + offset);
      modalSpecs.innerHTML = specs.map(s => `<span>${s}</span>`).join('');

      modalPrice.textContent = price + ' /pc';

      // Build booking URL with pre-filled notes
      const specsText = specs.join(', ');
      const notes = `Inquiry for: ${name}\nBrand: ${brand}${color ? ' (' + color + ')' : ''}\nSpecs: ${specsText}\nPrice: ${price} /pc`;
      modalActionBtn.href = `/book?service=other&notes=${encodeURIComponent(notes)}`;

      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
  });

  modalClose.addEventListener('click', () => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = '';
  });

  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
    }
  });
</script>