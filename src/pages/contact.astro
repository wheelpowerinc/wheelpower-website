---
import MainLayout from '../layouts/MainLayout.astro';
import { getSiteSettings } from '../lib/directus.js';

// Fetch site settings from Directus
const siteSettings = await getSiteSettings();
const settings = siteSettings || {};

const phone = settings.phone || '+63 9XX XXX XXXX';
const email = settings.email || 'info@wheelpowerautoshop.com';
const address = settings.address || 'Marilaque Highway, Baras, Rizal, Philippines';
const facebook = settings.facebook_url || 'https://www.facebook.com/WheelPowerTiresAutocare';
const mapsUrl = settings.google_maps_url || 'https://maps.google.com/?q=WheelPower+Auto+Shop+Baras+Rizal';
const businessHours = settings.business_hours || '8:00 AM - 5:00 PM';

// Extract messenger from facebook URL
const facebookUsername = facebook.split('/').pop();
const messenger = `https://m.me/${facebookUsername}`;

// Configuration
const WEB3FORMS_KEY = '528eb7cc-b0d5-4bbe-98f5-9d274734f8ba';
---

<MainLayout 
  title="Contact Us" 
  description="Get in touch with WheelPower Auto Shop. Visit us at Marilaque Highway, Baras, Rizal or call us for tire and auto care inquiries."
>

  <!-- Page Header -->
  <section class="bg-gradient-to-b from-dark-900 to-dark-950 py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="section-subtitle">Get in Touch</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Contact Us</h1>
      <p class="text-dark-300 text-lg max-w-2xl mx-auto">
        Have questions? Need a quote? We're here to help. Reach out through any of the channels below.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold text-white mb-8">Contact Information</h2>
          
          <div class="space-y-6">
            <!-- Address -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">üìç</span>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Shop Address</h3>
                <p class="text-dark-300" set:html={address.replace(/,/g, ',<br />')}></p>
                <a 
                  href={mapsUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1 text-primary-400 hover:text-primary-300 text-sm mt-2 transition-colors"
                >
                  <span>Get Directions</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">üìû</span>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Phone Number</h3>
                <a 
                  href={`tel:${phone.replace(/\s/g, '')}`}
                  class="text-dark-300 hover:text-primary-400 transition-colors text-lg"
                >
                  {phone}
                </a>
                <p class="text-dark-500 text-sm mt-1">Call or text anytime</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">‚úâÔ∏è</span>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Email Address</h3>
                <a 
                  href={`mailto:${email}`}
                  class="text-dark-300 hover:text-primary-400 transition-colors"
                >
                  {email}
                </a>
                <p class="text-dark-500 text-sm mt-1">We reply within 24 hours</p>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">üïê</span>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Business Hours</h3>
                <p class="text-dark-300">Monday - Sunday</p>
                <p class="text-primary-400 font-semibold">{businessHours}</p>
                <p class="text-dark-500 text-sm mt-1">Open 7 days a week</p>
              </div>
            </div>

            <!-- Facebook -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">üì±</span>
              </div>
              <div>
                <h3 class="font-semibold text-white mb-1">Social Media</h3>
                <a 
                  href={facebook}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-dark-300 hover:text-primary-400 transition-colors"
                >
                  Facebook Page
                </a>
                <p class="text-dark-500 text-sm mt-1">Follow us for updates and promos</p>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="mt-10 flex flex-wrap gap-4">
            <a href={`tel:${phone.replace(/\s/g, '')}`} class="btn-primary">
              üìû Call Now
            </a>
            <a href={messenger} target="_blank" rel="noopener noreferrer" class="btn-secondary">
              üí¨ Message Us
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <div class="card p-6 md:p-8">
            <h2 class="text-2xl font-bold text-white mb-6">Send Us a Message</h2>
            
            <!-- Hidden config values for JavaScript -->
            <input type="hidden" id="web3forms-key" value={WEB3FORMS_KEY} />
            
            <form id="contact-form" class="space-y-5">
              <div>
                <label for="name" class="block text-sm font-medium text-dark-300 mb-2">
                  Your Name *
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  placeholder="Juan Dela Cruz"
                  class="input-field"
                />
              </div>
              
              <div class="grid sm:grid-cols-2 gap-4">
                <div>
                  <label for="phone" class="block text-sm font-medium text-dark-300 mb-2">
                    Phone Number *
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    placeholder="0917 123 4567"
                    class="input-field"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-dark-300 mb-2">
                    Email Address
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    placeholder="juan@email.com"
                    class="input-field"
                  />
                </div>
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-dark-300 mb-2">
                  Subject *
                </label>
                <select id="subject" name="subject" required class="input-field">
                  <option value="">Select a topic</option>
                  <option value="tire-inquiry">Tire Inquiry / Pricing</option>
                  <option value="mags-inquiry">Mags / Wheels Inquiry</option>
                  <option value="service-inquiry">Service Inquiry</option>
                  <option value="appointment">Appointment Question</option>
                  <option value="feedback">Feedback / Suggestion</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-dark-300 mb-2">
                  Message *
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5"
                  required
                  placeholder="How can we help you?"
                  class="input-field resize-none"
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                id="submit-btn"
                class="w-full btn-primary py-4 flex items-center justify-center gap-2"
              >
                <span id="submit-text">Send Message</span>
                <span id="submit-loading" class="hidden">
                  <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </span>
              </button>
            </form>

            <!-- Success Message (Hidden by default) -->
            <div id="success-message" class="hidden text-center py-8">
              <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">Message Sent!</h3>
              <p class="text-dark-300 mb-6">Thank you for reaching out. We'll get back to you soon!</p>
              <button id="send-another-btn" class="btn-secondary">
                Send Another Message
              </button>
            </div>

            <!-- Error Message (Hidden by default) -->
            <div id="error-message" class="hidden text-center py-8">
              <div class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">Something went wrong</h3>
              <p class="text-dark-300 mb-6">Please try again or contact us directly.</p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button id="try-again-btn" class="btn-secondary">
                  Try Again
                </button>
                <a href={`tel:${phone.replace(/\s/g, '')}`} class="btn-primary">
                  üìû Call Us
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-12 md:py-16 bg-dark-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-white mb-2">Find Us</h2>
        <p class="text-dark-400">Located along Marilaque Highway, Baras, Rizal</p>
      </div>
      
      <div class="aspect-[21/9] bg-dark-800 rounded-2xl overflow-hidden border border-dark-700/50">
        <iframe 
          src={mapsUrl.includes('embed') ? mapsUrl : `https://maps.google.com/maps?q=${encodeURIComponent(address)}&output=embed`}
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="WheelPower Auto Shop Location"
          class="grayscale hover:grayscale-0 transition-all duration-500"
        ></iframe>
      </div>
      
      <div class="text-center mt-6">
        <a 
          href={mapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary inline-flex items-center gap-2"
        >
          <span>Open in Google Maps</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>
  </section>

</MainLayout>

<!-- Form Handling Script -->
<script>
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const submitText = document.getElementById('submit-text');
  const submitLoading = document.getElementById('submit-loading');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const tryAgainBtn = document.getElementById('try-again-btn');
  const sendAnotherBtn = document.getElementById('send-another-btn');

  const web3formsKey = document.getElementById('web3forms-key')?.value;

  // Show loading state
  function setLoading(isLoading) {
    if (submitBtn && submitText && submitLoading) {
      if (isLoading) {
        submitBtn.setAttribute('disabled', 'true');
        submitText.classList.add('hidden');
        submitLoading.classList.remove('hidden');
      } else {
        submitBtn.removeAttribute('disabled');
        submitText.classList.remove('hidden');
        submitLoading.classList.add('hidden');
      }
    }
  }

  // Show success
  function showSuccess() {
    if (form && successMessage) {
      form.classList.add('hidden');
      successMessage.classList.remove('hidden');
      if (errorMessage) errorMessage.classList.add('hidden');
    }
  }

  // Show error
  function showError() {
    if (form && errorMessage) {
      form.classList.add('hidden');
      errorMessage.classList.remove('hidden');
      if (successMessage) successMessage.classList.add('hidden');
    }
  }

  // Reset form
  function resetForm() {
    if (form && successMessage && errorMessage) {
      form.reset();
      form.classList.remove('hidden');
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
      setLoading(false);
    }
  }

  // Try again button
  if (tryAgainBtn) {
    tryAgainBtn.addEventListener('click', resetForm);
  }

  // Send another message button
  if (sendAnotherBtn) {
    sendAnotherBtn.addEventListener('click', resetForm);
  }

  // Form submission
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      setLoading(true);

      // Get form data
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        phone: formData.get('phone'),
        email: formData.get('email') || '',
        subject: formData.get('subject'),
        message: formData.get('message')
      };

      try {
        // Send email via Web3Forms
        const emailData = new FormData();
        emailData.append('access_key', web3formsKey);
        emailData.append('subject', 'üì© New Contact Message - WheelPower Auto Shop');
        emailData.append('from_name', 'WheelPower Website');
        emailData.append('name', data.name);
        emailData.append('phone', data.phone);
        emailData.append('email', data.email);
        emailData.append('inquiry_subject', data.subject);
        emailData.append('message', data.message);

        const emailResponse = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: emailData
        });

        if (!emailResponse.ok) {
          throw new Error('Email sending failed');
        }

        // Show success
        showSuccess();

      } catch (error) {
        console.error('Submission error:', error);
        showError();
      }
    });
  }
</script>