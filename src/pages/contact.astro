---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout 
  title="Contact Us" 
  description="Get in touch with WheelPower Auto Shop. Visit us at Marilaque Highway, Baras, Rizal or call us for tire and auto care inquiries."
>

  <!-- Page Header -->
  <section class="bg-gradient-to-b from-dark-900 to-dark-950 py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="section-subtitle">Get in Touch</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Contact Us</h1>
      <p class="text-dark-300 text-lg max-w-2xl mx-auto">
        Have questions? Need a quote? We're here to help. Reach out through any of the channels below.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold text-white mb-8">Contact Information</h2>
          
          <div class="space-y-6">
            <!-- Address -->
