---
import MainLayout from '../layouts/MainLayout.astro';
import { getSiteSettings, getServices } from '../lib/directus.js';

// Fetch site settings and services from Directus
const siteSettings = await getSiteSettings();
const directusServices = await getServices();

const settings = siteSettings || {};
const phone = settings.phone || '+63 9XX XXX XXXX';

// Fallback services if Directus is unavailable
const fallbackServices = [
  { id: 'tire-installation', name: 'Tire Installation', duration: '30-60 mins', price: 'From ‚Ç±300/tire' },
  { id: 'wheel-alignment', name: 'Wheel Alignment', duration: '45-60 mins', price: 'From ‚Ç±800' },
  { id: 'vulcanizing', name: 'Vulcanizing / Tire Repair', duration: '15-30 mins', price: 'From ‚Ç±150' },
  { id: 'oil-change', name: 'Oil Change', duration: '20-30 mins', price: 'From ‚Ç±800' },
  { id: 'preventive-maintenance', name: 'Preventive Maintenance', duration: '1-2 hours', price: 'From ‚Ç±1,500' },
  { id: 'underchassis', name: 'Underchassis Repair', duration: 'Varies', price: 'Get Quote' },
];

// Use Directus services if available, otherwise use fallback
const services = directusServices && directusServices.length > 0 ? directusServices : fallbackServices;

// Available time slots
const timeSlots = [
  '8:00 AM', '8:30 AM', '9:00 AM', '9:30 AM', '10:00 AM', '10:30 AM', '11:00 AM', '11:30 AM',
  '1:00 PM', '1:30 PM', '2:00 PM', '2:30 PM', '3:00 PM', '3:30 PM', '4:00 PM'
];

// Configuration - Replace with your actual values
const WEB3FORMS_KEY = '528eb7cc-b0d5-4bbe-98f5-9d274734f8ba';
const DIRECTUS_URL = 'https://directus-production-2cc1.up.railway.app';
---

<MainLayout 
  title="Book Appointment" 
  description="Schedule your service appointment at WheelPower Auto Shop. Easy online booking for tire installation, wheel alignment, and more."
>

  <!-- Page Header -->
  <section class="bg-gradient-to-b from-dark-900 to-dark-950 py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="section-subtitle">Schedule a Visit</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Book an Appointment</h1>
      <p class="text-dark-300 text-lg max-w-2xl mx-auto">
        Fill out the form below to request an appointment. We'll confirm your booking via SMS or call.
      </p>
    </div>
  </section>

  <!-- Booking Form Section -->
  <section class="py-12 md:py-16">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Form Card -->
      <div class="card p-6 md:p-8">
        <form id="booking-form" class="space-y-8">
          
          <!-- Hidden config values for JavaScript -->
          <input type="hidden" id="web3forms-key" value={WEB3FORMS_KEY} />
          <input type="hidden" id="directus-url" value={DIRECTUS_URL} />
          
          <!-- Step 1: Select Service -->
          <div class="space-y-4">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-white font-bold text-sm">1</div>
              <h2 class="text-xl font-bold text-white">Select Service</h2>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-3">
              {services.map((service) => (
                <label 
                  class="service-option relative flex items-start gap-3 p-4 rounded-xl border-2 border-dark-700 hover:border-primary-500/50 cursor-pointer transition-all has-[:checked]:border-primary-500 has-[:checked]:bg-primary-500/10"
                >
                  <input 
                    type="radio" 
                    name="service" 
                    value={service.name}
                    required
                    class="mt-1 w-4 h-4 text-primary-500 bg-dark-800 border-dark-600 focus:ring-primary-500 focus:ring-2"
                  />
                  <div class="flex-1">
                    <div class="font-medium text-white">{service.name}</div>
                    <div class="text-sm text-dark-400">
                      {service.duration || 'Contact for estimate'} ‚Ä¢ {service.price || 'Get Quote'}
                    </div>
                  </div>
                </label>
              ))}
              
              <!-- Always show "Other" option -->
              <label 
                class="service-option relative flex items-start gap-3 p-4 rounded-xl border-2 border-dark-700 hover:border-primary-500/50 cursor-pointer transition-all has-[:checked]:border-primary-500 has-[:checked]:bg-primary-500/10"
              >
                <input 
                  type="radio" 
                  name="service" 
                  value="Other / General Inquiry"
                  class="mt-1 w-4 h-4 text-primary-500 bg-dark-800 border-dark-600 focus:ring-primary-500 focus:ring-2"
                />
                <div class="flex-1">
                  <div class="font-medium text-white">Other / General Inquiry</div>
                  <div class="text-sm text-dark-400">Varies ‚Ä¢ Get Quote</div>
                </div>
              </label>
            </div>
          </div>

          <!-- Divider -->
          <div class="border-t border-dark-700"></div>

          <!-- Step 2: Choose Date & Time -->
          <div class="space-y-4">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-white font-bold text-sm">2</div>
              <h2 class="text-xl font-bold text-white">Choose Date & Time</h2>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-4">
              <div>
                <label for="date" class="block text-sm font-medium text-dark-300 mb-2">
                  Preferred Date *
                </label>
                <input 
                  type="date" 
                  id="date" 
                  name="preferred_date" 
                  required
                  min={new Date().toISOString().split('T')[0]}
                  class="input-field"
                />
              </div>
              
              <div>
                <label for="time" class="block text-sm font-medium text-dark-300 mb-2">
                  Preferred Time *
                </label>
                <select id="time" name="preferred_time" required class="input-field">
                  <option value="">Select a time</option>
                  {timeSlots.map((slot) => (
                    <option value={slot}>{slot}</option>
                  ))}
                </select>
              </div>
            </div>
            
            <p class="text-dark-500 text-sm">
              ‚è∞ Shop hours: 8:00 AM - 5:00 PM daily. Last appointment at 4:00 PM.
            </p>
          </div>

          <!-- Divider -->
          <div class="border-t border-dark-700"></div>

          <!-- Step 3: Your Information -->
          <div class="space-y-4">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center text-white font-bold text-sm">3</div>
              <h2 class="text-xl font-bold text-white">Your Information</h2>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="sm:col-span-2">
                <label for="name" class="block text-sm font-medium text-dark-300 mb-2">
                  Full Name *
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="customer_name" 
                  required
                  placeholder="Juan Dela Cruz"
                  class="input-field"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-dark-300 mb-2">
                  Phone Number *
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  required
                  placeholder="0917 123 4567"
                  class="input-field"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-dark-300 mb-2">
                  Email Address
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  placeholder="juan@email.com"
                  class="input-field"
                />
              </div>
            </div>
            
            <div>
              <label for="vehicle" class="block text-sm font-medium text-dark-300 mb-2">
                Vehicle (Make / Model / Year)
              </label>
              <input 
                type="text" 
                id="vehicle" 
                name="vehicle" 
                placeholder="e.g., Toyota Vios 2020"
                class="input-field"
              />
            </div>
            
            <div>
              <label for="notes" class="block text-sm font-medium text-dark-300 mb-2">
                Additional Notes
              </label>
              <textarea 
                id="notes" 
                name="notes" 
                rows="3"
                placeholder="Any specific concerns or requests..."
                class="input-field resize-none"
              ></textarea>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button 
              type="submit" 
              id="submit-btn"
              class="w-full btn-primary text-lg py-4 flex items-center justify-center gap-2"
            >
              <span id="submit-text">Submit Booking Request</span>
              <span id="submit-loading" class="hidden">
                <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </span>
            </button>
            
            <p class="text-dark-500 text-sm text-center mt-4">
              By submitting, you agree to receive SMS/call confirmation from WheelPower Auto Shop.
            </p>
          </div>
        </form>

        <!-- Success Message (Hidden by default) -->
        <div id="success-message" class="hidden text-center py-8">
          <div class="w-20 h-20 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Booking Request Sent!</h3>
          <p class="text-dark-300 mb-6 max-w-md mx-auto">
            Thank you! We've received your appointment request. We'll contact you within a few hours to confirm.
          </p>
          <div class="space-y-3">
            <p class="text-dark-400 text-sm">
              <span class="text-white font-medium">What's next?</span><br />
              We'll call or text you to confirm your appointment time.
            </p>
          </div>
          <div class="mt-8">
            <a href="/" class="btn-secondary">
              Back to Home
            </a>
          </div>
        </div>

        <!-- Error Message (Hidden by default) -->
        <div id="error-message" class="hidden text-center py-8">
          <div class="w-20 h-20 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Something went wrong</h3>
          <p class="text-dark-300 mb-6">
            Please try again or contact us directly.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button id="try-again-btn" class="btn-secondary">
              Try Again
            </button>
            <a href={`tel:${phone.replace(/\s/g, '')}`} class="btn-primary">
              üìû Call Us
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Alternative -->
      <div class="mt-8 text-center">
        <p class="text-dark-400 mb-4">Prefer to book directly?</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`tel:${phone.replace(/\s/g, '')}`} class="inline-flex items-center justify-center gap-2 text-primary-400 hover:text-primary-300 transition-colors">
            <span>üìû</span>
            <span>Call Us</span>
          </a>
          <span class="hidden sm:inline text-dark-600">|</span>
          <a href="https://m.me/WheelPowerTiresAutocare" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 text-primary-400 hover:text-primary-300 transition-colors">
            <span>üí¨</span>
            <span>Message on Facebook</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-16 bg-dark-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl mb-4">‚ö°</div>
          <h3 class="font-bold text-white mb-2">Quick Confirmation</h3>
          <p class="text-dark-400 text-sm">We'll confirm your booking within a few hours during business hours.</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üîÑ</div>
          <h3 class="font-bold text-white mb-2">Easy Rescheduling</h3>
          <p class="text-dark-400 text-sm">Need to change your appointment? Just call us and we'll accommodate.</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üíØ</div>
          <h3 class="font-bold text-white mb-2">No Obligation</h3>
          <p class="text-dark-400 text-sm">Get a quote first. No pressure to proceed with any service.</p>
        </div>
      </div>
    </div>
  </section>

</MainLayout>

<!-- Form Submission Handler -->
<script>
  const form = document.getElementById('booking-form');
  const submitBtn = document.getElementById('submit-btn');
  const submitText = document.getElementById('submit-text');
  const submitLoading = document.getElementById('submit-loading');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const tryAgainBtn = document.getElementById('try-again-btn');
  
  const web3formsKey = document.getElementById('web3forms-key')?.value;
  const directusUrl = document.getElementById('directus-url')?.value;

  // Check URL params for pre-selected service
  const urlParams = new URLSearchParams(window.location.search);
  const preSelectedService = urlParams.get('service');
  
  if (preSelectedService) {
    const serviceInputs = document.querySelectorAll('input[name="service"]');
    serviceInputs.forEach((input) => {
      const inputValue = input.value.toLowerCase().replace(/\s+/g, '-');
      if (inputValue.includes(preSelectedService) || preSelectedService.includes(inputValue)) {
        input.checked = true;
      }
    });
  }

  // Show loading state
  function setLoading(isLoading) {
    if (submitBtn && submitText && submitLoading) {
      if (isLoading) {
        submitBtn.setAttribute('disabled', 'true');
        submitText.classList.add('hidden');
        submitLoading.classList.remove('hidden');
      } else {
        submitBtn.removeAttribute('disabled');
        submitText.classList.remove('hidden');
        submitLoading.classList.add('hidden');
      }
    }
  }

  // Show success
  function showSuccess() {
    if (form && successMessage) {
      form.classList.add('hidden');
      successMessage.classList.remove('hidden');
      window.scrollTo({ top: 200, behavior: 'smooth' });
    }
  }

  // Show error
  function showError() {
    if (form && errorMessage) {
      form.classList.add('hidden');
      errorMessage.classList.remove('hidden');
      window.scrollTo({ top: 200, behavior: 'smooth' });
    }
  }

  // Try again
  if (tryAgainBtn) {
    tryAgainBtn.addEventListener('click', () => {
      if (form && errorMessage) {
        errorMessage.classList.add('hidden');
        form.classList.remove('hidden');
        setLoading(false);
      }
    });
  }

  // Form submission
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      setLoading(true);

      // Get form data
      const formData = new FormData(form);
      const data = {
        service: formData.get('service'),
        preferred_date: formData.get('preferred_date'),
        preferred_time: formData.get('preferred_time'),
        customer_name: formData.get('customer_name'),
        phone: formData.get('phone'),
        email: formData.get('email') || '',
        vehicle: formData.get('vehicle') || '',
        notes: formData.get('notes') || '',
        status: 'pending'
      };

      try {
        // 1. Save to Directus database
        const directusResponse = await fetch(`${directusUrl}/items/bookings`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });

        if (!directusResponse.ok) {
          console.error('Directus error:', await directusResponse.text());
        }

        // 2. Send email via Web3Forms
        const emailData = new FormData();
        emailData.append('access_key', web3formsKey);
        emailData.append('subject', 'üöó New Booking Request - WheelPower Auto Shop');
        emailData.append('from_name', 'WheelPower Website');
        emailData.append('service', data.service);
        emailData.append('preferred_date', data.preferred_date);
        emailData.append('preferred_time', data.preferred_time);
        emailData.append('customer_name', data.customer_name);
        emailData.append('phone', data.phone);
        emailData.append('email', data.email);
        emailData.append('vehicle', data.vehicle);
        emailData.append('notes', data.notes);

        const emailResponse = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: emailData
        });

        if (!emailResponse.ok) {
          console.error('Email error:', await emailResponse.text());
        }

        // Show success even if one fails (as long as we tried)
        showSuccess();

      } catch (error) {
        console.error('Submission error:', error);
        showError();
      }
    });
  }
</script>