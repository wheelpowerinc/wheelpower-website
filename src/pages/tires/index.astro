    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-2 justify-center">
        {brands.map((brand) => (
          <button 
            class="brand-filter px-4 py-2 rounded-full text-sm font-medium border transition-all data-[active=true]:bg-primary-500 data-[active=true]:border-primary-500 data-[active=true]:text-white border-dark-600 text-dark-300 hover:border-primary-500/50 hover:text-white"
            data-brand={brand.toLowerCase()}
            data-active={brand === 'All' ? 'true' : 'false'}
          >
            {brand}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Tires Grid -->
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Results count -->
      <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <p class="text-dark-400">
          Showing <span id="tire-count" class="text-white font-medium">{tires.length}</span> tires
        </p>
        <p class="text-dark-500 text-sm">
          üí° Prices are per tire. Installation available.
        </p>
      </div>
      
      <!-- Tires Grid -->
      <div id="tires-grid" class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {tires.map((tire) => {
          const statusBadge = getStatusBadge(tire.status, tire.quantity);
          const isOutOfStock = tire.status === 'out_of_stock' || tire.quantity === 0;
          const brandName = typeof tire.brand === 'string' ? tire.brand : 'Other';
          
          return (
            <div 
              class={`tire-card card overflow-hidden group ${isOutOfStock ? 'opacity-60' : ''}`}
              data-brand={brandName.toLowerCase()}
            >
              <!-- Image -->
              <div class="aspect-square bg-gradient-to-br from-dark-800 to-dark-900 relative overflow-hidden">
                {tire.image ? (
                  <img 
                    src={getImageUrl(tire.image)} 
                    alt={tire.name}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center">
                      <div class="text-6xl mb-2">üîò</div>
                      <p class="text-dark-500 text-xs capitalize">{brandName}</p>
                    </div>
                  </div>
                )}
                
                <!-- Status Badge -->
                <div class="absolute top-3 left-3">
                  <span class={`px-2 py-1 rounded-full text-xs font-medium border ${statusBadge.class}`}>
                    {statusBadge.text}
                  </span>
                </div>
                
                <!-- Sale Badge -->
                {tire.original_price && (
                  <div class="absolute top-3 right-3">
                    <span class="px-2 py-1 bg-primary-500 text-white rounded-full text-xs font-bold">
                      SALE
                    </span>
                  </div>
                )}
              </div>
              
              <!-- Info -->
              <div class="p-4">
                <!-- Brand & Type -->
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-primary-400 text-sm font-medium capitalize">{brandName}</span>
                  {tire.type && (
                    <>
                      <span class="text-dark-600">‚Ä¢</span>
                      <span class="text-dark-400 text-sm">{tire.type}</span>
                    </>
                  )}
                </div>
                
                <!-- Name & Size -->
                <h3 class="font-bold text-white group-hover:text-primary-400 transition-colors mb-1">
                  {tire.name}
                </h3>
                <p class="text-dark-400 text-sm mb-3">Size: {tire.size}</p>
                
                <!-- Features -->
                {tire.features && tire.features.length > 0 && (
                  <div class="flex flex-wrap gap-1 mb-4">
                    {tire.features.slice(0, 2).map((feature) => (
                      <span class="px-2 py-0.5 bg-dark-800 rounded text-xs text-dark-300">
                        {feature}
                      </span>
                    ))}
                  </div>
                )}
                
                <!-- Price -->
                <div class="flex items-center gap-2 mb-4">
                  <span class="text-xl font-bold text-white">{formatPrice(tire.price)}</span>
                  {tire.original_price && (
                    <span class="text-dark-500 line-through text-sm">{formatPrice(tire.original_price)}</span>
                  )}
                </div>
                
                <!-- Action Button -->
                {isOutOfStock ? (
                  <button disabled class="w-full py-2.5 rounded-lg bg-dark-800 text-dark-500 font-medium cursor-not-allowed">
                    Out of Stock
                  </button>
                ) : (
                  <a 
                    href={`/book?product=tire&item=${tire.id}`}
                    class="block w-full py-2.5 rounded-lg bg-primary-500 hover:bg-primary-600 text-white font-medium text-center transition-colors"
                  >
                    Inquire / Buy
                  </a>
                )}
              </div>
            </div>
          );
        })}
      </div>
      
      <!-- Empty State -->
      {tires.length === 0 && (
        <div class="text-center py-16">
          <div class="text-6xl mb-4">üîç</div>
          <h3 class="text-xl font-bold text-white mb-2">No tires available</h3>
          <p class="text-dark-400 mb-4">Check back soon for new inventory!</p>
        </div>
      )}
      
      <!-- Hidden Empty State for filtering -->
      <div id="empty-state" class="hidden text-center py-16">
        <div class="text-6xl mb-4">üîç</div>
        <h3 class="text-xl font-bold text-white mb-2">No tires found</h3>
        <p class="text-dark-400 mb-4">Try selecting a different brand filter.</p>
        <button id="reset-filter" class="btn-secondary">
          Show All Tires
        </button>
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-16 bg-dark-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl mb-4">üöó</div>
          <h3 class="font-bold text-white mb-2">Free Size Consultation</h3>
          <p class="text-dark-400 text-sm">Not sure what size you need? We'll help you find the right fit for your vehicle.</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üîß</div>
          <h3 class="font-bold text-white mb-2">Installation Available</h3>
          <p class="text-dark-400 text-sm">Purchase includes professional installation at our shop.</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üí∞</div>
          <h3 class="font-bold text-white mb-2">Best Price Guarantee</h3>
          <p class="text-dark-400 text-sm">Competitive prices on all tire brands. Ask about our promos!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Can't Find What You're Looking For?
      </h2>
      <p class="text-dark-300 mb-8">
        We may have more sizes and brands in stock. Contact us with your vehicle details 
        and we'll find the perfect tires for you.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-secondary">
          Send Inquiry
        </a>
        <a href="tel:+639XXXXXXXXX" class="btn-primary">
          üìû Call Us
        </a>
      </div>
    </div>
  </section>

</MainLayout>

<!-- Filter Script -->
<script>
  const filterButtons = document.querySelectorAll('.brand-filter');
  const tireCards = document.querySelectorAll('.tire-card');
  const tireCount = document.getElementById('tire-count');
  const emptyState = document.getElementById('empty-state');
  const tiresGrid = document.getElementById('tires-grid');
  const resetButton = document.getElementById('reset-filter');

  function filterTires(brand) {
    let visibleCount = 0;
    
    tireCards.forEach((card) => {
      const cardBrand = card.dataset.brand;
      const shouldShow = brand === 'all' || cardBrand === brand;
      
      if (shouldShow) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });
    
    if (tireCount) {
      tireCount.textContent = visibleCount.toString();
    }
    
    if (emptyState && tiresGrid) {
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
        tiresGrid.classList.add('hidden');
      } else {
        emptyState.classList.add('hidden');
        tiresGrid.classList.remove('hidden');
      }
    }
    
    filterButtons.forEach((btn) => {
      const btnBrand = btn.dataset.brand;
      btn.dataset.active = (btnBrand === brand).toString();
    });
  }

  filterButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const brand = btn.dataset.brand || 'all';
      filterTires(brand);
    });
  });

  if (resetButton) {
    resetButton.addEventListener('click', () => {
      filterTires('all');
    });
  }

  const urlParams = new URLSearchParams(window.location.search);
  const brandParam = urlParams.get('brand');
  if (brandParam) {
    filterTires(brandParam.toLowerCase());
  }
</script>