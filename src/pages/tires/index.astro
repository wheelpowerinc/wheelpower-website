<!-- Filter Script -->
<script>
  const filterButtons = document.querySelectorAll('.brand-filter');
  const tireCards = document.querySelectorAll('.tire-card');
  const tireCount = document.getElementById('tire-count');
  const emptyState = document.getElementById('empty-state');
  const tiresGrid = document.getElementById('tires-grid');
  const resetButton = document.getElementById('reset-filter');

  function filterTires(brand: string) {
    let visibleCount = 0;
    
    tireCards.forEach((card) => {
      const cardBrand = (card as HTMLElement).dataset.brand;
      const shouldShow = brand === 'all' || cardBrand === brand;
      
      if (shouldShow) {
        (card as HTMLElement).style.display = 'block';
        visibleCount++;
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });
    
    // Update count
    if (tireCount) {
      tireCount.textContent = visibleCount.toString();
    }
    
    // Show/hide empty state
    if (emptyState && tiresGrid) {
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
        tiresGrid.classList.add('hidden');
      } else {
        emptyState.classList.add('hidden');
        tiresGrid.classList.remove('hidden');
      }
    }
    
    // Update active button
    filterButtons.forEach((btn) => {
      const btnBrand = (btn as HTMLElement).dataset.brand;
      (btn as HTMLElement).dataset.active = (btnBrand === brand).toString();
    });
  }

  // Add click handlers
  filterButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const brand = (btn as HTMLElement).dataset.brand || 'all';
      filterTires(brand);
    });
  });

  // Reset button
  if (resetButton) {
    resetButton.addEventListener('click', () => {
      filterTires('all');
    });
  }

  // Check URL for brand filter on page load
  const urlParams = new URLSearchParams(window.location.search);
  const brandParam = urlParams.get('brand');
  if (brandParam) {
    filterTires(brandParam.toLowerCase());
  }
</script>