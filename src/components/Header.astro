---
// Header Component - Navigation bar that appears on every page
import { getSiteSettings, getImageUrl } from '../lib/directus.js';

// Fetch site settings
const siteSettings = await getSiteSettings();
const settings = siteSettings || {};

const currentPath = Astro.url.pathname;

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: 'Tires', href: '/tires' },
  { name: 'Mags', href: '/mags' },
  { name: 'Gallery', href: '/gallery' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="fixed w-full top-0 z-50 bg-dark-900 border-b border-dark-700">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 cursor-pointer group">
        {settings.site_logo ? (
          <div class="bg-white rounded-lg p-1.5 shadow-md group-hover:shadow-lg transition-shadow">
            <img 
              src={getImageUrl(settings.site_logo)} 
              alt={settings.business_name || 'WheelPower Auto Shop'}
              class="w-9 h-9 md:w-11 md:h-11 object-contain"
            />
          </div>
        ) : (
          <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center font-bold text-lg md:text-xl shadow-lg shadow-primary-500/20 group-hover:shadow-primary-500/40 transition-shadow">
            W
          </div>
        )}
        <div class="hidden sm:block">
          <div class="font-bold text-lg text-white group-hover:text-primary-400 transition-colors">{settings.business_name?.split(' ')[0] || 'WheelPower'}</div>
          <div class="text-xs text-primary-400 -mt-1">Tires & Auto Care</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class={`px-4 py-2 rounded-lg text-sm font-medium cursor-pointer transition-all duration-200 ${
              currentPath === link.href 
                ? 'text-primary-400 bg-primary-500/10' 
                : 'text-dark-300 hover:text-primary-400 hover:bg-dark-800'
            }`}
          >
            {link.name}
          </a>
        ))}
        <a href="/book" class="ml-4 btn-primary text-sm px-5 py-2.5 cursor-pointer">
          Book Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 text-dark-300 hover:text-primary-400 cursor-pointer transition-colors"
        aria-label="Open menu"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-1 pt-2 border-t border-dark-700">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class={`px-4 py-3 rounded-lg font-medium cursor-pointer transition-all duration-200 ${
              currentPath === link.href 
                ? 'text-primary-400 bg-primary-500/10' 
                : 'text-dark-300 hover:text-primary-400 hover:bg-dark-800'
            }`}
          >
            {link.name}
          </a>
        ))}
        <a href="/book" class="btn-primary text-center mt-2 cursor-pointer">
          Book Now
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile Menu Script -->
<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  if (menuBtn && mobileMenu && menuIcon && closeIcon) {
    menuBtn.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      
      if (isOpen) {
        mobileMenu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      } else {
        mobileMenu.classList.remove('hidden');
        menuIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
      }
    });
  }
</script>