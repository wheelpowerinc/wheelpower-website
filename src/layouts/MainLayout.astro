---
// Main Layout - The template wrapper for all pages
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getSiteSettings, getImageUrl } from '../lib/directus.js';

// Fetch site settings
const siteSettings = await getSiteSettings();
const settings = siteSettings || {};
const phone = settings.phone || '+63 9XX XXX XXXX';
const email = settings.email || 'info@wheelpowerautoshop.com';
const businessName = settings.business_name || 'WheelPower Tires and Auto Care Services';
const address = settings.address || 'Marilaque Highway, Baras, Rizal, Philippines';
const facebookUrl = settings.facebook_url || 'https://www.facebook.com/WheelPowerTiresAutocare';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const { 
  title, 
  description = `${businessName} - Your trusted partner for quality tires, wheel alignment, and professional auto care in Baras, Rizal along Marilaque Highway.`,
  image,
  type = 'website'
} = Astro.props;

const siteUrl = 'https://wheelpowerautoshop.com';
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const siteTitle = title === 'Home' ? `${businessName} | Tires & Auto Care in Baras, Rizal` : `${title} | WheelPower Auto Shop`;
const faviconUrl = settings.site_favicon ? getImageUrl(settings.site_favicon) : '/favicon.svg';
const ogImage = image || (settings.site_logo ? getImageUrl(settings.site_logo) : `${siteUrl}/og-image.jpg`);

// Local Business Structured Data (JSON-LD)
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "AutoRepair",
  "name": businessName,
  "image": ogImage,
  "url": siteUrl,
  "telephone": phone,
  "email": email,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Marilaque Highway",
    "addressLocality": "Baras",
    "addressRegion": "Rizal",
    "postalCode": "1970",
    "addressCountry": "PH"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 14.624197,
    "longitude": 121.256665
  },
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
    "opens": "08:00",
    "closes": "17:00"
  },
  "sameAs": [facebookUrl],
  "priceRange": "₱₱",
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": 14.624197,
      "longitude": 121.256665
    },
    "geoRadius": "30000"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Auto Care Services",
    "itemListElement": [
      {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Tire Installation"}},
      {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Wheel Alignment"}},
      {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Vulcanizing"}},
      {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Oil Change"}},
      {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Preventive Maintenance"}}
    ]
  }
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{siteTitle}</title>
    <meta name="title" content={siteTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content="tire shop Rizal, wheel alignment Baras, vulcanizing Rizal, auto repair Marilaque Highway, tire installation Philippines, Sailun tires, Radar tires, Bridgestone, Dunlop, car maintenance Rizal, WheelPower, gulong.ph partner, mags wheels Rizal" />
    <meta name="author" content={businessName} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={currentUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="WheelPower Auto Shop" />
    <meta property="og:locale" content="en_PH" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="PH-RIZ" />
    <meta name="geo.placename" content="Baras, Rizal" />
    <meta name="geo.position" content="14.624197;121.256665" />
    <meta name="ICBM" content="14.624197, 121.256665" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://directus-production-2cc1.up.railway.app" />
    
    <!-- Structured Data for Local Business -->
    <script type="application/ld+json" set:html={JSON.stringify(businessSchema)} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    
    <main class="flex-grow pt-16 md:pt-20">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Click-to-Call Mobile Button (Fixed) -->
    <a 
      href={`tel:${phone.replace(/\s/g, '')}`}
      class="fixed bottom-6 right-6 z-40 md:hidden bg-gradient-to-r from-green-500 to-green-600 text-white p-4 rounded-full shadow-lg shadow-green-500/30 hover:shadow-green-500/50 transition-shadow"
      aria-label="Call us"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
    </a>
  </body>
</html>